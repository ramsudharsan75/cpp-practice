{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Template Project: g++ build",
            "command": "g++-14",
            "args": [
                "-g",
                "-std=c++20",
                "${workspaceFolder}/TemplateProject/*.cpp",
                "-o",
                "${workspaceFolder}/TemplateProject/rooster"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "compiler: /opt/homebrew/bin/g++"
        },
        {
            "type": "cppbuild",
            "label": "Template Project: clang++ build",
            "command": "clang++",
            "args": [
                "-g",
                "-std=c++20",
                "${workspaceFolder}/TemplateProject/*.cpp",
                "-o",
                "${workspaceFolder}/TemplateProject/rooster"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "compiler: /opt/homebrew/bin/clang++"
        }
    ]
}