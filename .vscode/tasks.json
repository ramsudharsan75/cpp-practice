{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Template Project: gcc build",
            "command": "gcc-14",
            "args": [
                "-g",
                "-std=c++20",
                "${workspaceFolder}/TemplateProject/*.cpp",
                "-o",
                "${workspaceFolder}/TemplateProject/rooster"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
        },
        {
            "type": "cppbuild",
